<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="-5dp"
        android:right="-5dp"
        android:top="0dp">
        <rotate android:pivotX="50%"
            android:pivotY="50%">
            <shape>
                <gradient
                    android:angle="180"
                    android:startColor="#FCA039"
                    android:endColor="#F7C757"
                    android:useLevel="false">
                </gradient>
                <stroke
                    android:width="1dp"
                    android:color="#000000" />
            </shape>
        </rotate>
    </item>
</layer-list>